    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mocha Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
              "--inspect-brk",
              "${workspaceFolder}/test/**/*.js",
              "--no-timeout"
            ],
            "runtimeVersion": "16.13.1",
            "skipFiles": [
              "<node_internals>/**"
            ]
        }
        
    ]
}

